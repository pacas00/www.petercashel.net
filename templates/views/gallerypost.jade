extends ../layouts/default

block content
	.container
		article
			p: a(href='/gallery') &larr; back to the gallery
			hr
			if !data.gallerypost
				h2 Invalid Gallery.
			else
				a(href='/gallery/' + data.gallerypost.key): h2= data.gallerypost.name
					if data.gallerypost.publishedDate
						.pull-right.text-muted= data.gallerypost._.publishedDate.format('Do MMM YYYY')
					// Carousel
					.carousel
					#myCarousel.carousel.slide(data-ride="carousel")
						// Indicators
						ol.carousel-indicators
							li.active(data-target="#myCarousel" data-slite-to="0")
							li(data-target="#myCarousel" data-slite-to="1")
							li(data-target="#myCarousel" data-slite-to="2")
							// Wrapper for slides
							.carousel-inner
								if data.gallerypost.heroImage.exists
									.item.active
										img(src=data.gallerypost._.heroImage.url, alt=data.gallerypost.name + ' hero image')
								each image, i in data.gallerypost.images
									.item
										a(href=image.url)
											img(src=image.url, alt=data.gallerypost.name + ' image ' + (i+1))

							a.left.carousel-control(href="#myCarousel" data-slide="prev")
								span.glyphicon.glyphicon-chevron-left
							a.right.carousel-control(href="#myCarousel" data-slide="next")
								span.glyphicon.glyphicon-chevron-right